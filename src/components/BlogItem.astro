---
import type { FrontMatter } from "src/types";
import LinkButton from "./LinkButton";

const {post} = Astro.props;

const {title, url, date, lastmod, tags, excerpt} = post.frontmatter as FrontMatter;

---

<article class="border-t border-primary dark:border-soft-white p-5 flex flex-col gap-y-2 lg:gap-x-10 lg:flex-row lg:items-start md:py-10">
  <p class="flex-shrink-0">
    <date>{date}</date>
  </p>
  <div class="space-y-5">
    <h2 class="text-2xl lg:text-3xl">
      <a href={url} class="hover:opacity-80 transition-opacity">{title}</a>
    </h2>
    {tags ?
      <ul class="flex gap-3 flex-wrap">
        {tags.map(( tag :string ) =>{
          return (
            <li>
              <a href="" class="bg-primary text-soft-white dark:text-secondary dark:bg-soft-white text-sm lg:text-base py-1 px-3 rounded-lg hover:opacity-90 transition-opacity">{tag}</a>
            </li>
          )
        })}
      </ul> : null}
    <p class="">{excerpt}</p>
    <LinkButton href={url} className="inline-block">記事を読む<span class="align-top">&rarr;</span></LinkButton>
  </div>
</article>
